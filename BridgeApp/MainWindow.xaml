<Window x:Class="OPCBridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPCBridge"
        mc:Ignorable="d"
        Title="OPC Bridge" 
        MinHeight="700" 
        MinWidth="1100"
        ResizeMode="CanMinimize"
        WindowState="Normal"
        Icon="Resources/Bridge.ico"
        Closing="Window_Closing">

    <Grid ShowGridLines="False" Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="100">
            </RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Margin="20 0 0 0">
            <TextBlock Text="Select an OPC Server available in the list:" />
            <ComboBox x:Name="opcServerList"
                      SelectionChanged="OpcServerList_SelectionChanged"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      MaxHeight="150">
            </ComboBox>
        </StackPanel>

        <Button Grid.Column="0" 
                Grid.Row="1" 
                Content="Connect" 
                Width="70" 
                Height="20" 
                RenderTransformOrigin="1.867,1.615" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Margin="0 0 0 10"
                Cursor="Hand" 
                Click="LoadServers_Click" />

        <TextBlock Grid.ColumnSpan="4"
                   Text="OPC Connector"
                   FontWeight="DemiBold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="40" />
        <Image Source="./Resources/opc logo.png"
               Grid.Column="3"
               Height="50"
               Margin="0 0 20 0"
               HorizontalAlignment="Right"/>
        <StackPanel Grid.Row="2" 
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Margin="20 0 0 0">
            <TextBlock Text="Available branches in OPC Server:" />

            <ListBox x:Name="opcBranchesList"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                     MouseDoubleClick="OpcBranchesList_MouseDoubleClick"
                     Height="130">
            </ListBox>
        </StackPanel>

        <Button Grid.Row="2"
                Grid.Column="0"
                Content="Load Tags"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Width="70" 
                Height="20"
                Cursor="Hand"
                Click="LoadTagsButton_Click"/>

        <ProgressBar Grid.Row="3" 
                     Grid.ColumnSpan="4"
                     Width="150"
                     Height="15"
                     Visibility="Collapsed"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     VerticalAlignment="Bottom"
                     Margin="0 0 0 10"
                     x:Name="loadingBar"/>

        <Grid Grid.Column="1"
              Grid.Row="1"
              Grid.RowSpan="2"
              Margin="20 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- TextBlock height -->
                <RowDefinition Height="*"/>
                <!-- ListBox fills the rest -->
            </Grid.RowDefinitions>

            <TextBlock Text="Available Tags: " 
                       Grid.Row="0">
                <Label Content ="{Binding}" />
            </TextBlock>

            <ListBox Grid.Row="1" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      x:Name="opcTagsList" />
        </Grid>

        <Grid Grid.Column="2"
              Grid.Row="1"
              Grid.RowSpan="2"
              Margin="20 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- TextBlock height -->
                <RowDefinition Height="*"/>
                <!-- ListBox fills the rest -->
            </Grid.RowDefinitions>

            <TextBlock Text="Tag IDs: " 
                        Grid.Row="0"/>

            <ListBox Grid.Row="1" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      x:Name="opcIDList"
                      MouseDoubleClick="OpcIDsList_MouseDoubleClick"/>

        </Grid>

        <StackPanel Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="3"
                    Margin="20 0" >
            <TextBlock Text="Subscription value: " />
            <ListBox x:Name="tagValues" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Height="320">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <Button Content="Clear" 
                Grid.Column="3"
                Grid.Row="2"
                Click="ClearButton_Click"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"    
                Width="50"
                Height="20"
                Margin="0 0 20 0"
                Cursor="Hand"/>

        <Button Content="Export to Excel"
                Grid.Row="2"
                Grid.Column="3"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Height="20"
                Width="106"
                Margin="20 0 0 0"
                Cursor="Hand"
                x:Name="ExportToExcelButton"
                Click="ExportToExcelButton_Click"/>
    </Grid>
</Window>
